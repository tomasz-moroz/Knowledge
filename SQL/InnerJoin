/*INNER JOIN służy do połączenia dwóch lub więcej tabel używając do tego jednej lub więcej kolumn.
Wynikiem INNER JOIN jest część wspólna dwóch lub więcej tabel.*/
/*Połącz tabele basket_a i basket_b używając kolumy fruit jako klucza*/
select a.id id_a, a.fruit fruit_a, b.id id_b, b.fruit fruit_b from basket_a a inner join basket_b b on a.fruit = b.fruit;


/*LEFT JOIN służy do połączenia dwóch lub więcej tabel używając do tego jednej lub więcej kolumn.
Wynikiem LEFTJOIN jest lewa tabela powiększona o dane z prawej tabeli*/

/*Połącz tabele basket_a i basket_b używając kolumy fruit jako klucza*/
select a.id id_a, a.fruit fruit_a, b.id id_b, b.fruit fruit_b
from basket_a a
LEFT join basket_b b on a.fruit = b.fruit;

/*Połącz tabele smartphones_all i d_smartphones_model.*/
SELECT a.id, a.brand_id, m.model, a.performance, a.profitability, a.cpu_id, a.ram, a.screen, a.memory, a.system_id, a.camera, a.price
FROM smartphones_all a
left join d_smartphones_model m on a.model_id = m.id;

/*W powyższym połaczeniu zamiast model_id pokaż kolumnę model z tabeli d_smartphones_model*/
/*Połącz tabele smartphones_all, d_smartphones_model i d_smartphones_brand.*/

SELECT a.id, b.brand, m.model, a.performance, a.profitability, a.cpu_id, a.ram, a.screen, a.memory, a.system_id, a.camera, a.price
FROM smartphones_all a
left join d_smartphones_model m on a.model_id = m.id
left join d_smartphones_brand b on a.brand_id = b.id;


/*FULL JOIN służy do połączenia dwóch lub więcej tabel używając do tego jednej lub więcej kolumn.
Wynikiem FULL JOIN są lewa i prawa tabela. Tam gdzie nastąpi połączenie ukazane zostaną dane,
tam gdzie nie będzie połączenia wyświetlone zostana wartości NULL*/

/*Połącz tabele basket_a i basket_b używając kolumy fruit jako klucza*/
select a.id id_a, a.fruit fruit, b.id id_b, b.fruit fruit_b
from basket_a a
FULL join basket_b b on a.fruit = b.fruit;

/*Wybierz telefony z tabeli smartphones o id większym niż 289 lub ceną niższą niż 450*/
SELECT * FROM smartphone_shop.smartphones WHERE id > 289 OR price > 450;

/*Wybierz telefony marki ‚Apple’ i ‚Samsung’ z tabeli smartphones z ceną niższą niż 1500*/
SELECT * FROM smartphone_shop.smartphones WHERE brand IN ('Apple','Samsung') AND price < 1500;

/*Wybierz telefony z tabeli smartphones z ceną niższą niż 1500 lub wyższą niż 2500*/
SELECT * FROM smartphone_shop.smartphones WHERE price NOT BETWEEN 1500 AND 2500;

/*Wybierz telefony tabeli smartphones których marka ma ‚a’ na drugim miejscu i jest długości pięciu znaków.*/
SELECT * FROM smartphone_shop.smartphones WHERE brand LIKE '_a%' ORDER BY price ASC;

/*//Wybierz telefony z tabeli smartphones marki Xiaomi, posortuj je po nazwie modelu malejąco*/
SELECT * FROM smartphone_shop.smartphones WHERE brand IN ('Xiaomi') ORDER BY model DESC;

/*//Wybierz 7 i 8 najdroższy telefon z tabeli smartphones*/
SELECT * FROM smartphone_shop.smartphones ORDER BY price DESC LIMIT 2 OFFSET 6;


/* GROUP BY (tabela przestawna excel)*/


/*Zliczone zostaną wszystkie wiersze w podziale na unikalne wartości z brand*/
SELECT brand, Count(*) FROM smartphone_shop.smartphones GROUP BY brand;

/*Oblicz średnią, minimalną i maksymalną cenę telefonu w podziale na markę, posortuj po maksymalnej cenie malejąco*/
SELECT brand, round (AVG(price),0), min(price), max(price) FROM smartphone_shop.smartphones GROUP BY 1 ORDER BY 4 DESC;

/*Oblicz ilość modeli telefonów w podziale na markę, wybierając tylko takie w których marka zawiera literę „h”*/
SELECT brand, COUNT(*) FROM smartphone_shop.smartphones WHERE LOWER(brand) LIKE '%h%' GROUP BY brand ORDER BY COUNT(*) DESC;
/*mozna tez zapisac*/
SELECT brand, COUNT(*) FROM smartphone_shop.smartphones WHERE LOWER(brand) LIKE '%h%' GROUP BY 1 ORDER BY 2 DESC;

/*Wybierz marki telefonów z tabeli smartphones o średniej cenie wyższej niż 1500, posortuj po średniej cenie malejąco*/
SELECT brand, round (AVG(price),0) FROM smartphone_shop.smartphones GROUP BY 1 HAVING AVG(price) >1500 ORDER BY 2 DESC;

/*Wybierz unikalne marki telefonów posiadających literę ‚y’ w nazwie modelu*/
SELECT DISTINCT brand FROM smartphone_shop.smartphones WHERE LOWER(model) LIKE '%y%' ORDER BY 1;